
<div class="row g-3">
  <div class="col-sm-10">
    <h6 class="display-1">服装記録</h6>
  <div class="col-sm-10">
  <%= form_with model: @event, local: true do |f| %>
  <div class="col-md-6">
    <label class="form-label">日付け</label>
      <%= f.date_field :date %>
  </div>
  <div class="form-floating mb-3">
    <div class="col-md-6">
      <label class="form-label">服装をアップロード</label>
        <%= f.file_field :image, id:"item-image" %>
    </div>
  </div>
  <div class="mb-3">
    <label class="col-sm-2 col-form-label">出来事</label>
      <%= f.collection_select(:events_select_id, EventsSelect.all, :id, :name, {}, {class:"select-box", id:"events"}) %>
  </div>

  <div class="form-floating mb-3">
    <label for="inputPassword3" class="col-sm-2 col-form-label .text-nowrap">会った人</label>
      <%= f.text_area :met_person, class:"met-person-text" %>
  </div>
 <div class="form-floating mb-3">
    <div class="form-check">
      <%= f.label :checkbox, "この服装を公開しますか？" %>
      <%= f.check_box :checkbox, id: "check_box" %>
    </div>
  </div>
  <div class="record-btn-contents">
      <%= f.submit "登録する" ,class:"btn btn-primary"%>
  </div>
  <% end %>
</div>

