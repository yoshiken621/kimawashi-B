
<div class="bg-dark">
  <h1 class="display-1">服装記録</h1>
  <%= form_with model: @event, local: true do |f| %>
  <div class="form-floating mb-3">
    <label for="inputEmail3" class="col-sm-2 col-form-label">日付け</label>
    <div class="col-sm-10">
       <%= f.date_field :date %>
    </div>
  </div>
  <div class="form-floating mb-3">
    <div class="col-sm-10">
      <%= f.label :image, "服装をアップロード" %>
      <%= f.file_field :image, id:"item-image" %>
    </div>
  </div>
  <div class="form-floating mb-3">
    <label for="inputPassword3" class="col-sm-2 col-form-label">出来事</label>
    <%= f.collection_select(:events_select_id, EventsSelect.all, :id, :name, {}, {class:"select-box", id:"events"}) %>
  </div>

  <div class="form-floating mb-3">
    <label for="inputPassword3" class="col-sm-2 col-form-label">会った人</label>
    <%= f.text_area :met_person, class:"met-person-text" %>
  </div>
 <div class="form-floating mb-3">
    <div class="col-sm-10 offset-sm-2">
      <div class="form-check">
        <%= f.label :checkbox, "服装を公開しますか？" %>
        <%= f.check_box :checkbox, id: "check_box" %>
      </div>
    </div>
  </div>
  <div class="record-btn-contents">_
    <%= f.submit "登録する" ,class:"btn btn-primary"%>
  </div>
  <% end %>
</div>

