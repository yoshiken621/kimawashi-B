<% event_params = ['', '仕事・学校', '遊び', 'デート', 'その他'] %>
<div class="image-index">
  <h6 class="display-1">今までの投稿</h6>
  <% @events.each do |event| %>
    <div>服装</div>
    <%= image_tag event.image, class:"img-thumbnail col-md-6" %>
    <div>投稿日</div>
    <%= event.date%>
    <div>この日の出来事</div>
    <%= event_params[event.events_select_id]%>
    <div>会った人</div>
    <%= event.met_person %>
    <% if event.checkbox == true %>
      <div>公開中</div>
      <div>いいね</div>
      <%= event.likes.count %>Likes
    <% else %>
      <div>非公開</div>
    <% end %>
  <% end %>
</div>