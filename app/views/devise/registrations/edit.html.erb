<h2>ユーザー編集</h2>

<%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname %>（ニックネーム）<br />
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :age_select_id %>（年代）<br />
    <%= f.collection_select(:age_select_id, AgeSelect.all, :id, :name, {}, {class:"select-box", id:"age"}) %>
  </div>
  
  <div class="field">
    <%= f.label :sex_select_id %>（性別）<br />
    <%= f.collection_select(:sex_select_id, SexSelect.all, :id, :name, {}, {class:"select-box", id:"sex"}) %>
  </div>

  <div class="field">
    <%= f.label :email %>（メールアドレス）<br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>パスワード(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>（パスワード確認）<br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
